<h3> {{ viewTitle }}</h3>

<form action="/product" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{product.id}}">
    <div class="form-group">
          <label>Product ID</label>
          <input type="text"
            class="form-control" name="Product_ID" id="" value="{{product.Product_ID}}" placeholder="ID">
    </div>

    <div class="form-group">
        <label >Product Title</label>
        <input type="text"
            class="form-control" name="Product_Title" value="{{product.Product_Title}}" id=""  placeholder="Title">
    </div>
 
    <div class="form-row">
        <div class="form-group col-md-12">
          <label>Product Price</label>
          <input type="text"
            class="form-control" name="Product_Price" value="{{product.Product_Price}}" id="" placeholder="Price">
        </div>

    </div>
    <div class="form-group">
        <button type="submit" id="" style="background-color: #1589ff;" class="btn text-light " name=""> <i class="fa fa-database"></i> Submit</button>
        <a href="/product/list" class="btn btn-secondary" role="submit"> <i class="fa fa-list-alt"></i> Product list</a>
    </div>

</form>