<h3> {{ viewTitle }}</h3>

<form action="/purchase" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{purchase.id}}">
    <div class="form-group">
          <label>Title</label>
          <input type="text"
            class="form-control" name="Title" id="" value="{{purchase.Title}}" placeholder="Title">
    </div>

    <div class="form-group">
        <label >Price</label>
        <input type="text"
            class="form-control" name="Price" value="{{purchase.Price}}" id=""  placeholder="Price">
    </div>
 
    <div class="form-row">
        <div class="form-group col-md-12">
          <label>User</label>
          <input type="text"
            class="form-control" name="User" value="{{purchase.User}}" id="" placeholder="User">
        </div>

    </div>
    <div class="form-group">
        <button type="submit" id="" style="background-color: #c12869;" class="btn text-light " name=""> <i class="fa fa-database"></i> Submit</button>
        <a href="/purchase/list" class="btn btn-secondary" role="submit"> <i class="fa fa-list-alt"></i> Purchase list</a>
    </div>

</form>